<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
		<link rel="stylesheet" type="text/css" href="/Content/css/styles.css">
		<title>Portland Hair Salon</title>
	</head>
	<body>
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<h2>Update client: @Model.GetClientName()</h2>
					<form class="client-update" action="/client/update/@Model.GetId()" method="post">
						<div class="form-group">
							<input type="hidden" class="form-control" name="_method" value="PATCH">
							<input type="hidden" class="form-control" name="client-id" value="@Model.GetId()">
							<label for="client-name">Client name</label>
							<input type="text" class="form-control" name="client-name" id="client-name" placeholder="Client Name">
						</div>
						<div class="form-group">
							<input type="hidden" class="form-control" name="_method" value="PATCH">
							<input type="hidden" class="form-control" name="client-id" value="@Model.GetId()">
							<label for="client-details">Client details</label>
							<input type="text" class="form-control" name="client-details" id="client-details" placeholder="Client details">
						</div>
						<div class="form-group">
							<input type="hidden" class="form-control" name="_method" value="PATCH">
							<input type="hidden" class="form-control" name="client-id" value="@Model.GetId()">
							<select name="client-stylist">
						    @foreach (var stylist in Model)
						    {
						      <option value="@stylist.GetId()">@stylist.GetStylistName()</option>
						    }
						  </select>
						</div>
						<button class="btn" type="submit" name="button">Enter</button>
					</form>
					<div>
						<h4><a href="/add-new-stylist">Add a new stylist</a></h4>
						<h4><a href="/add-new-client">Add a new client</a></h4>
						<h4><a href="/">Return home</a></h4>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>
