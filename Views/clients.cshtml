<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
		<link rel="stylesheet" type="text/css" href="/Content/css/styles.css">
		<title>Portland Hair Salon</title>
	</head>
	<body>
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<h2>Clients</h2>
				</div>
			</div>
			<div>
				@if (@Model.Count == 0)
				{
				  <h3>No clients have been added yet!</h3>
				}
				<ul>
				@foreach (var client in Model)
				{
				  <li><h4><a href="/clients/@client.GetId()">@client.GetClientName()</a> | <a href="/client/update/@client.GetId()">Edit</a>| <a href="/client/delete/@client.GetId()">Delete</a></h4></li>
				}
				</ul>
				<h4><a href="/add-new-stylist">Add a new stylist</a></h4>
				<h4><a href="/add-new-client">Add a new client</a></h4>
			</div>
      <div>
				<h4><a href="/">Return home</a></h4>
      </div>
		</div>
	</body>
</html>
